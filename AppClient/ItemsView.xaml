<rxui:ReactiveUserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:rxui="http://reactiveui.net" 
    xmlns:ac="clr-namespace:AppClient"
    x:Class="AppClient.ItemsView"
    x:TypeArguments="ac:ItemsViewModel"
    Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="Update Products" x:Name="UpdateItems" Command="{Binding}"/>
        
        <Button Grid.Row="1" Content="Shopping Cart" x:Name="ViewShoppingCart" />

        <ListView Grid.Row="2" x:Name="ProductsList">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ac:ProductItemView Content="{Binding}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</rxui:ReactiveUserControl>
